{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": true,
    "rootDir": "./src"
  },
  "exclude": [
    "./dist",
    "**/*.spec.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
