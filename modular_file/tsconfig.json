{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    ".eslintrc.cjs",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
