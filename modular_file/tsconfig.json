{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "./dist/cjs",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "removeComments": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "target": "ES6",
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/**/*.d.ts",
    "./src/**/*.ts",
  ]
}
