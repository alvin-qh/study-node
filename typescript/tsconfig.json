{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "CommonJS",
    "target": "es6",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "build",
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
