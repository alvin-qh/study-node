{
  "name": "@toolkit/yarn-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --no-warn-ignored",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "start": "node ./index.js",
    "clean": "rm -rf dist"
  },
  "workspaces": [
    "./packages/*"
  ],
  "bin": "./index.js",
  "dependencies": {
    "@toolkit/yarn-app-lib": "workspace:*",
    "@toolkit/yarn-lib": "../module",
    "tsx": "^4.19.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "tsc-alias": "^1.8.13",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  }
}
