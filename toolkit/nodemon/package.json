{
  "name": "@toolkit/nodemon",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "index.js",
  "bin": {
    "app": "index.js"
  },
  "scripts": {
    "lint": "eslint --fix",
    "dev": "nodemon ./dev.js",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "start": "node index.js"
  },
  "dependencies": {
    "dayjs": "^1.11.18",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/node": "^24.5.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
