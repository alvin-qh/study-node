{
  "name": "@toolkit/bun-lib",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "default": "./index.ts",
      "import": "./index.ts"
    }
  },
  "main": "./index.ts",
  "module": "./index.ts",
  "scripts": {
    "lint": "eslint --fix",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "bun-types": "latest",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.44.0"
  },
  "peerDependencies": {
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@types/bun": "^1.2.22"
  }
}
