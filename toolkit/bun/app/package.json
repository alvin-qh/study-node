{
  "name": "@toolkit/bun-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint --fix",
    "start": "bun ./index.ts",
    "compile": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "compile:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")"
  },
  "bin": {
    "bun-app": "./index.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@toolkit/bun-lib": "../module",
    "@toolkit/bun-app-lib": "workspace:*"
  },
  "devDependencies": {
    "bun-types": "latest",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.18.0"
  },
  "peerDependencies": {
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2"
  }
}
