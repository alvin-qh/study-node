{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "sourceRoot": "."
  },
  "exclude": [
    "./dist",
    "./**/*.spec.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
