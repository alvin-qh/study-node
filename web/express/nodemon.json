{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules"
  ],
  "verbose": true,
  "execMap": {
    "ts": "tsx"
  },
  "events": {
    "restart": "echo \"App restarted\"",
    "start": "echo \"App started\"",
    "crash": "echo \"App crashed\"",
    "exit": "echo \"App exited\""
  },
  "watch": [
    [
      "src/**/*.ts",
      "src/**/*.json"
    ]
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts json"
}
