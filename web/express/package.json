{
  "name": "@web/express",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "./front"
  ],
  "scripts": {
    "lint": "eslint --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --detectOpenHandles",
    "dev": "tsx src/bin/www.ts",
    "build": "tsc --project tsconfig.build.json && copyfiles -u 1 src/**/*.json src/view/** src/view/**/** dist",
    "start": "bun dist/bin/www.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "chokidar": "^4.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-minify-html": "^0.12.0",
    "express-sanitizer": "^1.0.6",
    "express-validator": "^7.2.1",
    "log4js": "^6.9.1",
    "nunjucks": "^3.2.4",
    "serve-favicon": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.1.2",
    "@stylistic/eslint-plugin": "^5.4.0",
    "cheerio": "1.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "optionalDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/nunjucks": "^3.2.6",
    "@types/serve-favicon": "^2.5.7",
    "@types/supertest": "^6.0.3"
  }
}
