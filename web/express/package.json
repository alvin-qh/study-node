{
  "name": "@web/express",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "./front"
  ],
  "scripts": {
    "lint": "eslint --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --detectOpenHandles",
    "dev": "bun --watch src/bin/www.ts",
    "build": "tsc --project tsconfig.build.json && copyfiles -u 1 src/**/*.json src/view/** src/view/**/** dist",
    "start": "bun dist/bin/www.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-minify-html": "^0.12.0",
    "express-sanitizer": "^1.0.6",
    "express-validator": "^7.2.1",
    "log4js": "^6.9.1",
    "nunjucks": "^3.2.4",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^29.7.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/nunjucks": "^3.2.6",
    "@types/serve-favicon": "^2.5.7",
    "@types/supertest": "^6.0.3",
    "cheerio": "1.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "typescript-eslint": "^8.31.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}