{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.cjs",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
