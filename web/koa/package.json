{
  "name": "@web/koa",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "dev": "tsx --watch src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "start": "node ./dist/index.js"
  },
  "workspaces": [
    "front"
  ],
  "dependencies": {
    "@koa/router": "^14.0.0",
    "@ladjs/koa-views": "^9.0.0",
    "dotenv": "^17.2.2",
    "joi": "^18.0.1",
    "koa": "^3.0.1",
    "koa-accesslog": "^1.0.0",
    "koa-body": "^6.0.1",
    "koa-log4": "^2.3.2",
    "koa-static": "^5.0.0",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "cheerio": "1.1.2",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jest-extended": "^6.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "optionalDependencies": {
    "@types/jest": "^30.0.0",
    "@types/koa": "*",
    "@types/koa__router": "^12.0.4",
    "@types/koa-log4": "^2.3.6",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^24.5.2",
    "@types/nunjucks": "^3.2.6",
    "@types/supertest": "^6.0.3"
  }
}
