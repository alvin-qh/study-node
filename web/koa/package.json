{
  "name": "koa",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "package": "webpack",
    "lint": "eslint src/**/*.ts asset/**/*.ts --fix",
    "dev": "nodemon src/bin/www.ts",
    "test": "mocha src/**/*.spec.ts",
    "build": "tsc --project tsconfig.build.json && copyfiles -u 1 src/**/*.json src/public/**/* src/**/*.html dist",
    "start": "node dist/bin/www.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@koa/router": "^12.0.0",
    "@types/chai": "^4.3.5",
    "@types/koa": "^2.13.8",
    "@types/koa__router": "^12.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "koa": "^2.14.2"
  }
}
