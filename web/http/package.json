    "ejs": "^3.1.10",
    "form-data": "^4.0.1",
    "jsdom": "^25.0.1",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.4",
    "pug": "^3.0.3",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.1",
    "@types/nunjucks": "^3.2.6",
    "@types/pug": "^2.0.10",
    "bun-types": "^1.1.38",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
