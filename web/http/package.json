{
  "name": "@web/http",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --detectOpenHandles",
    "dev": "tsx ./src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "jsdom": "^27.0.0",
    "nunjucks": "^3.2.4",
    "pug": "^3.0.3",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.1.2",
    "@stylistic/eslint-plugin": "^5.4.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "optionalDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.2",
    "@types/nunjucks": "^3.2.6",
    "@types/pug": "^2.0.10"
  }
}
