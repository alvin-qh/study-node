{
  "name": "http-demo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint ./**/*.{ts,js,mjs,cjs} --fix",
    "dev": "tsx src/http/start-server.ts",
    "test": "mocha src/**/*.spec.ts --color",
    "build": "tsc --project tsconfig.build.json && copyfiles -u1 src/http/**/*.pug dist/",
