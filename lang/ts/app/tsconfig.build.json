{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true,
    "sourceRoot": "."
  },
  "exclude": [
    "./**/*.spec.ts"
  ],
  "extends": "./tsconfig.json",
  "include": [
    "./src/**/*.cjs",
    "./src/**/*.js",
    "./src/**/*.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
