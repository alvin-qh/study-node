{
  "name": "@lang/ts-lib",
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": {
      "default": "./index.js",
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "main": "./index.cjs",
  "module": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "lint": "eslint --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@jest/globals": "^30.1.2",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
