{
  "name": "ts-lib",
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "module": "./index.js",
  "main": "./index.cjs",
  "types": "./index.d.ts",
  "scripts": {
    "lint": "eslint ./**/*.{ts,js,cjs.mjs} --fix",
    "test": "mocha ./**/*.spec.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "chai": "^5.1.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "globals": "^15.12.0",
    "mocha": "^10.8.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
