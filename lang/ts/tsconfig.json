{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "@root": [
        "./src"
      ]
    },
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true,
    "target": "ESNext",
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    ".eslintrc.cjs",
    "src/**/*.d.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts"
  ]
}
