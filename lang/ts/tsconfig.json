{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "@root": [
        "./src"
      ]
    },
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true,
    "target": "ESNext",
    "types": [
      "mocha",
      "node"
    ],
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts"
  ]
}
