{
    "name": "study-node-testing",
    "version": "1.0.0",
    "description": "Study mocha test lib",
    "author": "Alvin",
    "license": "ISC",
    "scripts": {
        "setup": "npm install --update-binary",
        "test": "./node_modules/.bin/mocha ./test/**/*.js --timeout 1000",
        "cover": "./node_modules/.bin/nyc --reporter text npm test",
        "cover:html": "./node_modules/.bin/nyc --reporter html --reporter text npm test",
        "benchmark": "node ./benchmark/benchmark.js"
    },
    "devDependencies": {
        "benchmark": "^2.1.4",
        "chai": "^4.2.0",
        "microtime": "^3.0.0",
        "mocha": "^8.1.3",
        "nyc": "^15.1.0",
        "should": "^13.2.3",
        "minimist": ">=1.2.5"
    }
}
