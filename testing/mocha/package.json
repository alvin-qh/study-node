{
  "name": "@testing/mocha",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --fix",
    "test": "mocha src/*.spec.ts src/**/*.spec.ts --timeout=1000",
    "test:cover": "nyc npm test",
    "benchmark": "tsx src/benchmark/benchmark.ts",
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json && (concurrently \"tsc --project tsconfig.build.json -w\" \"tsc-alias --project tsconfig.build.json -w\")",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/benchmark": "^2.1.5",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "benchmark": "^2.1.4",
    "chai": "^6.0.1",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "should": "^13.2.3",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
