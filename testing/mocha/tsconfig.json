{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@root": [
        "./src"
      ]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    ".eslintrc.cjs",
    "jest.config.js",
    "src/**/*.d.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts"
  ]
}
