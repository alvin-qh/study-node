{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app": [
        "./app"
      ]
    },
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": [
      "mocha",
      "node"
    ]
  }
}
